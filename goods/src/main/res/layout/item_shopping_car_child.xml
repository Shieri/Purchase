<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"

>
    <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/id_cb_select_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:focusable="false"
            android:layout_gravity="center_vertical"
            android:button="@drawable/selector_check_bg"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/encoding"
    >

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_iv_logo"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:src="@mipmap/d2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:padding="1dp"
                android:layout_marginRight="6dp"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:text="商品名称"
                android:textSize="12dp"
                app:layout_constraintLeft_toRightOf="@+id/id_iv_logo"
                app:layout_constraintTop_toTopOf="parent"
        />



        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_price_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:paddingLeft="1dp"
                android:text="@string/price"
                android:textColor="@android:color/holo_red_light"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/id_iv_logo"
                app:layout_constraintBottom_toBottomOf="parent"
        />


            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_iv_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_reduce"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintRight_toLeftOf="@id/id_tv_count_now"
                    app:layout_constraintBottom_toBottomOf="parent"
            />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/id_tv_count_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text="1"
                    android:textSize="14dp"
                    app:layout_constraintRight_toLeftOf="@id/id_iv_add"
                    app:layout_constraintBottom_toBottomOf="parent"
            />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_add"
                    android:layout_marginRight="6dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>