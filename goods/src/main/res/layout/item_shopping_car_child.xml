<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unchecked_icon"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

    />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_store_ima"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#ededed"
            android:src="@mipmap/tio"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_select"

    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺名称"
            android:textSize="14dp"
            android:paddingRight="7dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_store_ima"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_price_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#ee1d23"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_store_ima"
            app:layout_constraintBottom_toBottomOf="@+id/iv_store_ima"
    />


    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_edit_subtract"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/iv_edit_subtract"
            app:layout_constraintRight_toLeftOf="@+id/tv_edit_buy_number"
            app:layout_constraintBottom_toBottomOf="@+id/iv_store_ima"

    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_edit_buy_number"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:minEms="1"
            android:text="1"
            android:textColor="#666666"
            android:textSize="12dp"
            app:layout_constraintRight_toLeftOf="@+id/iv_edit_add"
            app:layout_constraintBottom_toBottomOf="@+id/iv_store_ima"

    />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_edit_add"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/iv_edit_add"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/iv_store_ima"
    />

</androidx.constraintlayout.widget.ConstraintLayout>